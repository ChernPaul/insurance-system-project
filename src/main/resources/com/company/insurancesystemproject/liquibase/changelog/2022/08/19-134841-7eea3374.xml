<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="insurance-system-project">
        <createTable tableName="AGREEMENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_AGREEMENT"/>
            </column>
            <column name="CONCLUSION_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="INSURANCE_AMOUNT" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="TARIFF_RATE" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="INSURANCE_TYPE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="EXPIRATION_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="CLIENT_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="BRANCH_OFFICE_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="insurance-system-project">
        <createTable tableName="BRANCH_OFFICE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_BRANCH_OFFICE"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ADDRESS" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PHONE_NUMBER" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="insurance-system-project">
        <createTable tableName="CLIENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CLIENT"/>
            </column>
            <column name="FULLNAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="USER_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="EMAIL" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PASSPORT" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="insurance-system-project">
        <addColumn tableName="USER_">
            <column name="CLIENT_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="5" author="insurance-system-project">
        <createIndex indexName="IDX_AGREEMENT_BRANCH_OFFICE" tableName="AGREEMENT">
            <column name="BRANCH_OFFICE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="BRANCH_OFFICE_ID" baseTableName="AGREEMENT"
                                 constraintName="FK_AGREEMENT_ON_BRANCH_OFFICE" referencedColumnNames="ID"
                                 referencedTableName="BRANCH_OFFICE"/>
    </changeSet>
    <changeSet id="6" author="insurance-system-project">
        <createIndex indexName="IDX_AGREEMENT_CLIENT" tableName="AGREEMENT">
            <column name="CLIENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CLIENT_ID" baseTableName="AGREEMENT"
                                 constraintName="FK_AGREEMENT_ON_CLIENT" referencedColumnNames="ID"
                                 referencedTableName="CLIENT"/>
    </changeSet>
    <changeSet id="7" author="insurance-system-project">
        <createIndex indexName="IDX_CLIENT_USER" tableName="CLIENT">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="CLIENT" constraintName="FK_CLIENT_ON_USER"
                                 referencedColumnNames="ID" referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="8" author="insurance-system-project">
        <createIndex indexName="IDX_USER__CLIENT" tableName="USER_">
            <column name="CLIENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CLIENT_ID" baseTableName="USER_" constraintName="FK_USER__ON_CLIENT"
                                 referencedColumnNames="ID" referencedTableName="CLIENT"/>
    </changeSet>
</databaseChangeLog>